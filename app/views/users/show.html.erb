<h1> <%= @user.name %> </h1>

<div>
<h2> Demographic Information </h2>
<h5>First Name: <%= @user.first_name %></h5>
<h5>Last Name: <%= @user.last_name %></h5>
<h5>Email: <%= @user.email %></h5>
<h2> Default Billing Address </h2>
<%= @user.default_billing_address.street_address %>,
<%= @user.default_billing_address.city.name %>,
<%= @user.default_billing_address.state.name %>
<h2> Default Shipping Address </h2>
<%= @user.default_shipping_address.street_address %>,
<%= @user.default_shipping_address.city.name %>,
<%= @user.default_shipping_address.state.name %>
<br>
<h5><%= link_to "Edit this User's information.", edit_user_path(@user) %></h5>
<h5><%= link_to "Delete this user.", @user, method: 'delete' %></h5>
<h5>View Saved Addresses</h5>
<h5>View Unplaced Order (Cart)</h5>
</div>

<% if @user.credit_cards.first %>
  <div>
    <h2>Credit Card Information</h2>
    <h5>First Name: <%= @user.first_name %></h5>
    <h5>Last Name: <%= @user.last_name %></h5>
    <h5>Number: <%= @user.credit_cards.first.card_number %></h5>
    <h5>Expiration: <%= @user.credit_cards.first.exp_year%>-<%= @user.credit_cards.first.exp_month%></h5>
    <h5><%= link_to "Remove Card", '#', method: :delete, data: {confirm: "Are you sure?"}%></h5>
  </div>
<% end %>

<div>
<h2>Admin Actions for <%= @user.first_name %> <%= @user.last_name %></h2>
  <%= link_to '#' do %>
    <button class="btn btn-primary btn-lg col-xs-8 col-xs-offset-2">Create Order</button>
  <% end %>

  <%= link_to '#' do %>
    <button class="btn btn-primary btn-lg col-xs-8 col-xs-offset-2">Create Address</button>
  <% end %>
</div>

<div>
<h5>Order History</h5>

<%= render partial: 'users/order', locals: { orders: @user.orders} %>
</div>
